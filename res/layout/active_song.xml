<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
		android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="#222222">

        <ImageView
            android:id="@+id/currentartwork"
            android:layout_width="32dp"
            android:layout_height="32dp"
			android:contentDescription="artwork"
            android:src="@drawable/guardian" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/currentartwork"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/currentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strange Overtones"
                android:textColor="#f8f8f8"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brian Eno"
                android:textColor="#727272"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/playpause"
            android:layout_width="32dp"
            android:contentDescription="saas"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/pause" />

        <ImageButton
            android:layout_width="32dp"
            android:contentDescription="saas"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/playpause"
            android:background="@null"
            android:src="@drawable/play"
             />
    </RelativeLayout>